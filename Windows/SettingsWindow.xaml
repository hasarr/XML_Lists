<Window x:Class="ES_SYSTEM_K_Listy.Windows.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ES_SYSTEM_K_Listy.Windows"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="300" Width="500">
    <Grid Background="#d9d9d9">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Border  VerticalAlignment="Top" Height="40" Background="Azure" >
            <TextBlock Text="Lokalizacja katalogu z plikami XML: " Height="20" VerticalAlignment="Center" TextAlignment="Center"  />
        </Border>
        
        <StackPanel Orientation="Vertical" Grid.Row="0" Grid.Column="1">
            <TextBox IsReadOnly="True"  Height="20" x:Name="XMLLocationTextBox"/>
            <Button Content="Wybierz folder" Click="SelectFolderButton_Click" x:Name="SelectFolderButton"/>
        </StackPanel>
        <Button Content="Zapisz" Grid.ColumnSpan="2" Grid.Row="1" Height="40" VerticalAlignment="Bottom" Margin="0 0 0 10" x:Name="saveButton" Click="saveButton_Click"/>
    </Grid>
</Window>
